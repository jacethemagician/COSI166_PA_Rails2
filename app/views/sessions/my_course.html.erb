<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"><html>
  <head>
    <title>Dashboard</title>
  </head>

  <body>
    <!-- <%= render "common/navbar" %> -->
    <div class="container", style="padding-top:30px">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <!-- <div class="row"> -->
        <h2>Dashboard: Course Enrollment</h2>
        <a class="btn btn-dark pull-right" href="search_course" role="button" style="margin-top:20px">Find course</a>
      <!-- </div> -->
      <table class="table table-striped table-dark" style="margin-top:10px">
        <thead>
          <tr>
            <th>Course Code</th>
            <th>Name</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= course.course_code %></td>
              <td><%= course.course_name %></td>
              <td><%= course.course_description %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </body>
<html>
